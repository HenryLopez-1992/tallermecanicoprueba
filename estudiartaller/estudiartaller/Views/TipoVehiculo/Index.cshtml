@model IEnumerable<estudiartaller.Data.DDL.TipoVehiculo>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create"class=" btn btn-warning">Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class=" btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id"class=" btn btn-warning">Actializar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class=" btn btn-warning">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
